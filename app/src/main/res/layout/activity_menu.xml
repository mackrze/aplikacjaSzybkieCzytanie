<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckk2"
    android:orientation="vertical"
    tools:context=".MenuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bck2"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home_big"
            android:layout_marginHorizontal="120dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play"
                android:layout_marginTop="15dp"
                />


            <Button
                android:id="@+id/playBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/button_green_light"
                android:onClick="onClickPlayBtn"
                android:text="@string/playBtn"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stats"
                android:layout_marginTop="25dp"
                />

            <Button
                android:id="@+id/showResultsBtn"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/button_brown"
                android:onClick="onClickShowResultsBtn"
                android:text="@string/resultsBtn"
                android:textSize="20sp"
                android:layout_marginTop="25dp"/>

        </LinearLayout>


        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="155dp"
            android:background="@drawable/button_gray"
            android:onClick="onClickLogOutBtn"
            android:text="@string/logOutBtn"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>