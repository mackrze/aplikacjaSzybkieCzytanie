<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckk2"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bck2"
        android:orientation="vertical">


        <Button
            android:id="@+id/playBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="70dp"
            android:background="#4CAF50"
            android:onClick="onClickPlayBtn"
            android:text="@string/playBtn"
            android:textSize="20sp"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/showResultsBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="70dp"
            android:background="#F2EF913B"
            android:onClick="onClickShowResultsBtn"
            android:text="@string/resultsBtn"
            android:textSize="20sp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/logOutBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="70dp"
            android:background="#F29F958C"
            android:onClick="onClickLogOutBtn"
            android:text="@string/logOutBtn"
            android:textSize="20sp"
            android:layout_marginTop="75dp"/>

    </LinearLayout>
</LinearLayout>